						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{ADMIN_TOKEN}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"invoice_id\": \"{{INVOICE_ID}}\",\n  \"status\": \"PAID\"\n}"
