		{
			"name": "Invoice Management",
			"item": [
				{
					"name": "Create Invoice",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{ADMIN_TOKEN}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"customer_id\": \"{{CUSTOMER_ID}}\",\n  \"gst_percentage\": 18,\n  \"items\": [\n    {\"description\": \"Service A\", \"amount\": 1000},\n    {\"description\": \"Service B\", \"amount\": 500}\n  ]\n}"
						},
						"url": {
							"raw": "{{BASE_URL}}/v0/invoices/create",
							"host": [
								"{{BASE_URL}}"
							],
							"path": [
								"v0",
								"invoices",
								"create"
							]
						}
					},
					"response": []
				},
				{
					"name": "Get Invoices",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{TOKEN}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"customer_id\": \"{{CUSTOMER_ID}}\",\n  \"status\": \"PENDING\",\n  \"from_date\": \"2025-01-01\",\n  \"to_date\": \"2025-12-31\"\n}"
