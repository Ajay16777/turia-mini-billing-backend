{
	"name": "turia-mini-billing-backend",
	"version": "1.0.0",
	"description": "",
	"main": "/src/server.js",
	"scripts": {
		"dev": "nodemon src/server.js --exec node --loader ts-node/esm",
		"start": "node src/server.js",
		"build": "echo 'No build step needed for JS' && exit 0",
		"lint": "eslint . --ext .js",
		"db:migrate": "npx sequelize-cli db:migrate",
		"db:migrate:undo": "npx sequelize-cli db:migrate:undo",
		"db:migrate:undo:all": "npx sequelize-cli db:migrate:undo:all",
		"db:seed": "npx sequelize-cli db:seed:all",
		"db:seed:undo": "npx sequelize-cli db:seed:undo:all",
		"test": "NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js",
		"test:watch": "NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
		"test:coverage": "NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
		"test:verbose": "NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --verbose",
		"test:auth": "NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --testNamePattern='Authentication'",
		"test:customers": "NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --testNamePattern='Customer'",
		"test:invoices": "NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --testNamePattern='Invoice'",
		"db:test:setup": "node src/scripts/setupTestDb.js",
		"db:test:seed": "node src/scripts/seedTestData.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Ajay16777/turia-mini-billing-backend.git"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"type": "module",
	"bugs": {
		"url": "https://github.com/Ajay16777/turia-mini-billing-backend/issues"
	},
	"homepage": "https://github.com/Ajay16777/turia-mini-billing-backend#readme",
	"dependencies": {
		"bcrypt": "^6.0.0",
		"bcryptjs": "^3.0.3",
		"body-parser": "^2.2.1",
		"cookie-parser": "^1.4.7",
		"cors": "^2.8.5",
		"dotenv": "^17.2.3",
		"express": "^5.2.1",
		"joi": "^18.0.2",
		"jsonwebtoken": "^9.0.3",
		"node-cron": "^4.2.1",
		"pg": "^8.16.3",
		"pg-hstore": "^2.3.4",
		"sequelize": "^6.37.7",
		"winston": "^3.19.0",
		"winston-daily-rotate-file": "^5.0.0"
	},
	"devDependencies": {
		"eslint": "^9.39.1",
		"jest": "^30.2.0",
		"nodemon": "^3.1.11",
		"supertest": "^7.1.4"
	}
}